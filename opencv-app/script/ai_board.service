[Unit]
Description=AI Board Python Script
After=network.target

[Service]
WorkingDirectory=/home/pi/Desktop/ai-board/opencv-app
ExecStart=/usr/bin/python3 /home/pi/Desktop/ai-board/opencv-app/src/main.py
Restart=always
User=pi
StandardOutput=inherit
StandardError=inherit

[Install]
WantedBy=multi-user.target
